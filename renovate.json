{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackagePatterns":[
          "*"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
