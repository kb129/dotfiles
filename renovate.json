{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor"
      ],
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
